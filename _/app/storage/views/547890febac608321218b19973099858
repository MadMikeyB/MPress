		<p class="blog-post-meta"><time datetime="<?php echo $post->created_at; ?>"><?php echo DateController::showTimeAgo($post->created_at); ?></time> by <a href="/author/<?php echo $post->author; ?>"><?php echo $post->author; ?></a>
