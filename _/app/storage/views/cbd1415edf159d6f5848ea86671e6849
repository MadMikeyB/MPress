<?php $__env->startSection('title', 'Log In'); ?>
<?php $__env->startSection('content'); ?>

<?php echo Form::open(); ?>
<!-- check for login errors flash var -->
<?php if (Session::has('login_errors')): ?>
	<br />
	<span class="error">Username or password incorrect.</span>
<?php endif; ?>
		<!-- username field -->
		<p><?php echo Form::label('username', 'Username'); ?></p>
		<p><?php echo Form::text('username', '', array('class' => 'form-control')); ?></p>
		<!-- password field -->
		<p><?php echo Form::label('password', 'Password'); ?></p>
		<p><?php echo Form::password('password', array('class' => 'form-control')); ?></p>
		<!-- submit button -->
		<p><?php echo Form::submit('Login', array('class'=>'btn btn-primary')); ?></p>
<?php echo Form::close(); ?>
<?php $__env->stopSection(); ?>

<?php $__env->startSection('sidebar'); ?>
<p>Unfortunately, due to an overwhelming amount of spam registrations, registrations are closed</p>
<?php $__env->stopSection(); ?>
<?php echo $__env->make('layout', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>