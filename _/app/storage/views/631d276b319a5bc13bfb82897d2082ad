 <?php echo Form::hidden('author_id', $user->id); ?>
 <!-- title field -->
 <p><?php echo Form::label('title', 'Title'); ?></p>
 <?php echo $errors->first('title', '<p class="error">:message</p>'); ?>
 <p><?php echo Form::text('title', $post->title); ?></p>
 <!--  slug -->
 <p><?php echo Form::label('title_seo', 'Slug'); ?></p>
 <?php echo $errors->first('title_seo', '<p class="error">:message</p>'); ?>
 <p><?php echo Form::text('title_seo', $post->title_seo); ?></p>
 <!-- body field -->
 <p><?php echo Form::label('body', 'Body'); ?></p>
 <?php echo $errors->first('body', '<p class="error">:message</p>'); ?>
 <p><?php echo Form::textarea('body',$post->body, array('class' => 'ckeditor')); ?></p>
 <!--  checkbox -->
<p><?php echo Form::label('comments', 'Allow Comments?'); ?></p>
 <?php echo $errors->first('comments', '<p class="error">:message</p>'); ?>
  <?php echo Form::checkbox('comments', $post->comments, true); ?>
 <!-- submit button -->
 <p><?php echo Form::submit('Create'); ?></p>
 <?php echo Form::close(); ?>
</div>
<?php $__env->stopSection(); ?>
