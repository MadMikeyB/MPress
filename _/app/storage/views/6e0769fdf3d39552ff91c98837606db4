<?php $__env->startSection('title', 'Forgotten Password?'); ?>
<?php $__env->startSection('content'); ?>

<?php echo Form::open(); ?>

<?php if (Session::has('error')): ?>
	<span class="error"><?php echo trans(Session::get('reason')); ?></span>
<?php elseif (Session::has('success')): ?>
    <span class="success">An e-mail with the password reset has been sent.</span>
<?php endif; ?>

<p><?php echo Form::label('email', 'Email'); ?></p>
<p><?php echo Form::text('email'); ?></p>
<p><?php echo Form::submit('Send Reminder'); ?></p>

<?php echo Form::close(); ?>

<?php $__env->stopSection(); ?>
<?php echo $__env->make('layout', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>